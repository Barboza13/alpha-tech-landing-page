---
interface Props {
    img: string
    titulo: string
    description: string
}

const { img, titulo, description } = Astro.props
---

<div
    class="card mx-auto max-w-xs p-3 rounded-lg shadow bg-gray-800 border-gray-700 text-center h-auto md:h-auto opacity-0 translate-y-8 transition-all duration-1000 ease-in-out"
>
    <div class="grid place-items-center">
        <img
            class="object-cover size-20 rounded-t-lg md:h-20 md:w-20 md:rounded-none md:rounded-s-lg"
            src={img}
            alt={titulo}
        />
    </div>
    <h5 class="mb-2 text-xl font-semibold tracking-tight text-white">
        {titulo}
    </h5>
    <p class="mb-3 font-normal text-gray-400">{description}</p>
</div>

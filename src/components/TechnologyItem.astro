---
interface Props {
    img: ImageMetadata
    name: string
}

const { img, name } = Astro.props
---

<div class="mx-auto max-w-sm p-5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 text-center h-auto md:h-auto flex flex-col items-center justify-center">
    <img class="object-cover w-full rounded-t-lg md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src={img.src} alt={name} />
    <h5 class="mt-4 mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{name}</h5>
</div>

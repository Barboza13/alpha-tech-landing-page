---
interface Props {
    img: ImageMetadata
    name: string
}

const { img, name } = Astro.props
---

<div
    class="w-72 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 text-center h-72 md:h-60 md:w-60 flex flex-col items-center justify-center p-5 opacity-0 translate-y-8 transition-all duration-1000 ease-in-out card"
>
    <img
        class="rounded-t-lg h-[150px] md:h-[100px] w-[150px] md:w-[100px] md:rounded-none md:rounded-s-lg"
        src={img.src}
        alt={name}
    />
    <h5
        class="mt-4 mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"
    >
        {name}
    </h5>
</div>

---
import TechnologyItem from './TechnologyItem.astro'

import proyecto1 from '@images/proyecto1.webp'
import proyecto2 from '@images/proyecto2.webp'
import java from '@images/java.webp'
import laravel from '@images/laravel.webp'

interface Language {
    img: ImageMetadata
    name: string
    description: string
    technologies: string[]
}

const icons: Array<Language> = [
    {
        img: proyecto1,
        name: "Astro",
        description: "Para las landing pages que hemos desarrollado para algunas empresas, utilizamos Astro para diseñar interfaces visualmente atractivas y altamente optimizadas en cuanto a rendimiento.",
        technologies: ["Landing Pages", "Sitios Webs", "Blogs"] 
    },
    {
        img: proyecto2,
        name: "Flutter",
        description: "Con una sola base de código en Dart, utilizamos Flutter para crear apps para iOS y Android, aprovechando el mismo diseño, widgets y lógica.",
        technologies: ["Aplicaciones Moviles", "Android", "iOS"]
    },
    {
        img: java,
        name: "Java",
        description: "Con una sola base de código en Dart, utilizamos Flutter para crear apps para iOS y Android, aprovechando el mismo diseño, widgets y lógica.",
        technologies: ["Aplicaciones Moviles", "Android", "iOS"]
    },
    {
        img: laravel,
        name: "Laravel",
        description: "Con una sola base de código en Dart, utilizamos Flutter para crear apps para iOS y Android, aprovechando el mismo diseño, widgets y lógica.",
        technologies: ["Aplicaciones Moviles", "Android", "iOS"]
    }
]
---

<h1 class="mt-20 text-center mb-6 sm:mb-8 lg:mb-4 text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-blue-950">
    <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-blue-600">
        HABILIDADES
    </span>
</h1>

<div class="grid grid-cols-1 md:grid-cols-4 gap-2">
    {
        icons.map(({ img, name, description, technologies }, index) => (
            <TechnologyItem
                img={img}
                name={name}
                description={description}
                technologies={technologies} 
            />
        ))
    }
</div>

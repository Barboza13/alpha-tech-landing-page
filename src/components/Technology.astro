---
import TechnologyItem from './TechnologyItem.astro'

import htmlLogo from '@icons/icon-html.png'
import cssLogo from '@icons/icon-css.png'
import javascriptLogo from '@icons/icon-javascript.png'
import typescriptLogo from '@icons/icon-typescript.png'
import vueLogo from '@icons/icon-vue.png'
import tailwindLogo from '@icons/icon-tailwind.png'
import bootstrapLogo from '@icons/icon-bootstrap.png'
import astroLogo from '@icons/icon-astro.png'
import laravelLogo from '@icons/icon-laravel.png'
import phpLogo from '@icons/icon-php.png'
import flutterLogo from '@icons/icon-flutter.png'
import javaLogo from '@icons/icon-java.png'
import mysqlLogo from '@icons/icon-mysql.png'

interface language {
    img: ImageMetadata
    name: string
}

const icons: Array<language> = [
    { img: htmlLogo, name: 'HTML' },
    { img: cssLogo, name: 'CSS' },
    { img: javascriptLogo, name: 'Javascript' },
    { img: typescriptLogo, name: 'Typescript' },
    { img: tailwindLogo, name: 'Tailwindcss' },
    { img: bootstrapLogo, name: 'Bootstrap' },
    { img: vueLogo, name: 'Vue.js' },
    { img: astroLogo, name: 'Astro.js' },
    { img: laravelLogo, name: 'Laravel' },
    { img: phpLogo, name: 'PHP' },
    { img: flutterLogo, name: 'Flutter' },
    { img: javaLogo, name: 'Java' },
    { img: mysqlLogo, name: 'MySQL' },
]
---

<h1
    class="text-center lg:mb-4 text-3xl font-extrabold text-gray-900 dark:text-blue-950 md:text-5xl lg:text-6xl"
>
    <span
        class="text-transparent bg-clip-text bg-gradient-to-r to-blue-600 from-sky-400"
    >
        TECNOLOG√çAS
    </span>
</h1>

<div class="grid grid-cols-1 md:grid-cols-4 place-items-center gap-4">
    {icons.map(({ img, name }) => <TechnologyItem img={img} name={name} />)}
</div>

<script>
    import { observeCards } from '@animations/animations'

    observeCards()
</script>

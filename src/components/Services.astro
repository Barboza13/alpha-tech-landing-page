---
import ServicesItem from "@components/ServicesItem.astro"

import cameraImage from '@images/services-camera.png'
import webDevelopmentImage from '@images/services-web-development.png'
import mobileDevelopmentImage from '@images/services-mobile-development.png'
import networkImage from '@images/services-network.png'
import technicalServicesImage from '@images/services-technical-services.png'
import servicesComputerSuppliesImage from '@images/services-computer-supplies.png'

const SERVICIOS = [
    {
        img: cameraImage.src, // Usar .src para obtener la URL
        titulo: "Servicio de instalación de circuito cerrado.",
        description: "Soluciones de seguridad personalizadas con instalación profesional de sistemas de circuito cerrado.",
    },
    {
        img: webDevelopmentImage.src, // Usar .src para obtener la URL
        titulo: "Desarrollo de páginas web y aplicaciones web.",
        description: "Creamos sitios web atractivos y aplicaciones funcionales adaptadas a tus necesidades.",
    },
    {
        img: mobileDevelopmentImage.src,
        titulo: "Desarrollo de aplicaciones móviles.",
        description: "Desarrollo de aplicaciones móviles intuitivas y optimizadas para todas las plataformas.",
    },
    {
        img: networkImage.src,
        titulo: "Instalación de cableado estructurado en red.",
        description: "Implementamos cableado estructurado para una conectividad y rendimiento de red óptimos.",
    },
    {
        img: technicalServicesImage.src,
        titulo: "Servicios técnicos.",
        description: "Soporte técnico integral para mantener tus sistemas y dispositivos en óptimas condiciones.",
    },
    {
        img: servicesComputerSuppliesImage.src,
        titulo: "Insumos informáticos.",
        description: "Proporcionamos insumos de calidad para optimizar el rendimiento de tus equipos.",
    }
];
---
<h1 class="text-center lg:mb-4 text-3xl font-extrabold text-gray-900 dark:text-blue-950 md:text-5xl lg:text-6xl">
    <span class="text-transparent bg-clip-text bg-gradient-to-r to-blue-600 from-sky-400">SERVICIOS</span>
</h1>
<div class="grid grid-cols-1 md:grid-cols-3 gap-2">
    {SERVICIOS.map(servicio => (
        <ServicesItem {...servicio} />
    ))}
</div>

---
import ServicesItem from '@components/ServicesItem.astro'

import cameraImage from '@images/camara-de-seguridad.png'
import webDevelopmentImage from '@images/navegador.png'
import mobileDevelopmentImage from '@images/apps.png'
import networkImage from '@images/puerto-ethernet.png'
import technicalServicesImage from '@images/apoyo-tecnico.png'
import servicesComputerSuppliesImage from '@images/equipo-de-computadora.png'

const SERVICIOS = [
    {
        img: cameraImage.src,
        titulo: 'Servicio de instalación de circuito cerrado.',
        description:
            'Ofrecemos un servicio profesional de instalación de cámaras IP para sistemas de circuito cerrado.',
    },
    {
        img: webDevelopmentImage.src,
        titulo: 'Desarrollo de páginas web y aplicaciones web.',
        description:
            'Creamos sitios web atractivos y aplicaciones funcionales adaptadas a tus necesidades.',
    },
    {
        img: mobileDevelopmentImage.src,
        titulo: 'Desarrollo de aplicaciones móviles.',
        description:
            'Desarrollo de aplicaciones móviles intuitivas y optimizadas para todas las plataformas.',
    },
    {
        img: networkImage.src,
        titulo: 'Instalación de cableado estructurado en red.',
        description:
            'Implementamos cableado estructurado para una conectividad y rendimiento de red óptimos.',
    },
    {
        img: technicalServicesImage.src,
        titulo: 'Servicios técnicos.',
        description:
            'Soporte técnico integral para mantener tus sistemas y dispositivos en óptimas condiciones.',
    },
    {
        img: servicesComputerSuppliesImage.src,
        titulo: 'Insumos informáticos.',
        description:
            'Proporcionamos insumos de calidad para optimizar el rendimiento de tus equipos.',
    },
]
---

<div class="w-full max-w-[1040px] mx-auto">
    <h1
        class="text-center lg:mb-4 text-4xl font-extrabold text-gray-900 dark:text-blue-950 md:text-5xl lg:text-6xl"
    >
        <span
            class="text-transparent bg-clip-text bg-gradient-to-r to-blue-600 from-sky-400"
            >SERVICIOS</span
        >
    </h1>

    <div class="mt-10 grid grid-cols-1 md:grid-cols-3 gap-8">
        {SERVICIOS.map((servicio) => <ServicesItem {...servicio} />)}
    </div>
</div>

<h1
    class="text-center mb-4 lg:mb-4 text-3xl font-extrabold text-gray-900 dark:text-blue-950 md:text-5xl lg:text-6xl"
>
    <span
        class="text-transparent bg-clip-text bg-gradient-to-r to-blue-600 from-sky-400"
    >
        CONTACTO
    </span>
</h1>

<form
    class="flex flex-col w-[370px] md:w-[50%] h-[90%] bg-white dark:bg-gray-800 rounded-lg p-10"
    action="#"
>
    <label class="text-xl md:text-3xl text-white" for="nombre">
        Nombre completo:
    </label>
    <input
        class="h-[30px] border-b-2 bg-transparent outline-none text-2xl text-white p-2 mb-6 md:mb-10"
        type="text"
        id="nombre"
        name="nombre"
    />

    <label class="text-xl md:text-3xl text-white" for="email">Email:</label>
    <input
        class="h-[30px] border-b-2 bg-transparent outline-none text-2xl text-white p-2 mb-6 md:mb-10"
        type="email"
        id="email"
        name="email"
    />

    <label class="text-xl md:text-3xl text-white" for="telefono">
        Telefono:
    </label>
    <input
        class="h-[30px] border-b-2 bg-transparent outline-none text-2xl text-white p-2 mb-6 md:mb-10"
        type="text"
        id="telefono"
        name="telefono"
    />

    <label class="text-xl md:text-3xl text-white mb-4" for="mensaje">
        Mensaje:
    </label>
    <textarea
        class="text-2xl outline-none h-[100px] md:h-[200px]"
        name="mensaje"
        id="mensaje"
    >
    </textarea>

    <div class="flex justify-center mt-10">
        <button
            class="w-full h-16 text-2xl text-white bg-blue-700 hover:bg-blue-800 rounded-md p-2"
            type="submit"
        >
            Contactar
        </button>
    </div>
</form>

<script>
    const inputs = document.querySelectorAll('input')

    inputs.forEach((input) =>
        input.addEventListener('input', (event: Event) => {
            const input = event.target as HTMLInputElement

            if (input.value != '') {
                input.classList.add('border-blue-700')
            } else {
                input.classList.remove('border-blue-700')
            }
        }),
    )
</script>
